<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.server.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <!--用于将主菜单（一级菜单）的数据库字段映射到 Menu 类中-->
    <resultMap id="BaseResultMap" type="com.cloud.server.pojo.Menu">
        <id column="id" property="id" />
        <result column="url" property="url" />
        <result column="path" property="path" />
        <result column="component" property="component" />
        <result column="name" property="name" />
        <result column="iconCls" property="iconCls" />
        <result column="keepAlive" property="keepAlive" />
        <result column="requireAuth" property="requireAuth" />
        <result column="parentId" property="parentId" />
        <result column="enabled" property="enabled" />
    </resultMap>

    <!--在 resultMap 中使用 <collection> 实现一对多的嵌套映射，用于将一个菜单下的多个子菜单映射为一个列表属性。-->
    <resultMap id ="Menus" type ="com.cloud.server.pojo.Menu" extends="BaseResultMap">
        <!--子分类菜单-->
        <!--<collection> 标签定义了 children 属性，它是一个子菜单的集合，并且每个子菜单都映射为 Menu 对象的子对象-->
        <collection property="children" ofType="com.cloud.server.pojo.Menu">
            <id column="id2" property="id" />
            <result column="url2" property="url" />
            <result column="path2" property="path" />
            <result column="component2" property="component" />
            <result column="name2" property="name" />
            <result column="iconCls2" property="iconCls" />
            <result column="keepAlive2" property="keepAlive" />
            <result column="requireAuth2" property="requireAuth" />
            <result column="parentId2" property="parentId" />
            <result column="enabled2" property="enabled" />
        </collection>
    </resultMap>
    <resultMap id="MenusWithRoles" type ="com.cloud.server.pojo.Menu" extends="BaseResultMap">
        <!--property="roles": 表示 Menu 类中的 roles 属性将被填充。 ofType="com.cloud.server.pojo.Role": 指定集合中元素的类型是 Role-->
        <collection property="roles" ofType="com.cloud.server.pojo.Role">
            <id column="rid" property="id" />
            <result column="rname" property="name" />
            <result column="rnameZh" property="nameZh" />
        </collection>
    </resultMap>

    <resultMap id ="MenusWithChildren" type="com.cloud.server.pojo.Menu" extends="BaseResultMap">
        <id column="id1" property="id"/>
        <result column="name1" property="name" />
        <collection property="children" ofType="com.cloud.server.pojo.Menu">
            <id column="id2" property="id"/>
            <result column="name2" property="name" />
            <collection property="children" ofType="com.cloud.server.pojo.Menu">
                <id column="id3" property="id"/>
                <result column="name3" property="name" />
            </collection>
        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, url, path, component, name, iconCls, keepAlive, requireAuth, parentId, enabled
    </sql>
    <!-- 根据用户id查询菜单列表   -->
    <select id="getMenusByAdminId" resultMap="Menus">
        select distinct
               m1.*,
               m2.id as id2,
               m2.url as url2,
               m2.path as path2,
               m2.component as component2,
               m2.name as name2,
               m2.iconCls as iconCls2,
               m2.keepAlive as keepAlive2,
               m2.requireAuth as requireAuth2,
               m2.parentId as parentId2,
               m2.enabled as enabled2
        from menu m1, menu m2, admin_role ar,menu_role mr where m1.id =m2.parentId and m2.id = mr.mid and mr.rid =ar.rid and ar.adminId=#{id}
                                                            and m2.enabled=true
        order by m2.id;
    </select>
    <!--根据角色获取菜单列表-->
    <select id="getMenusWithRole" resultMap="MenusWithRoles">
        select m.*,r.id as rid,r.name as rname,r.nameZh as rnameZh
        from  menu m,menu_role mr,role r
        where m.id = mr.mid
          and mr.rid=r.id
        order by m.id
    </select>
    <!--查询所有菜单    -->
    <select id="getAllMenus" resultMap="MenusWithChildren">
        select
            m1.id as id1,m1.name name1,
            m2.id as id2,m2.name name2,
            m3.id as id3,m3.name name3
        from
            menu m1,menu m2,menu m3
        where
            m1.id =m2.parentId
          and
            m2.id = m3.parentId
          and
            m3.enabled=true;
    </select>

</mapper>
